apiVersion: v1
kind: Pod
metadata:
  name: "{{ include "npm-app-chart.fullname" . }}-test-connection"
  labels:
    {{- include "npm-app-chart.labels" . | nindent 4 }}
  annotations:
    "helm.sh/hook": test
spec:
  containers:
    - name: wget
      image: busybox
      command: ['wget']
      args: ['{{ include "npm-app-chart.fullname" . }}:{{ .Values.service.port }}']
  restartPolicy: Never
